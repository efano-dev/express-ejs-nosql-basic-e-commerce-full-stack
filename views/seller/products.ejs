<%- include("../templates/start") %>

    <div class="seller-content">
        <div class="product-actions">
            <button type="button" class="product-actions__button product-actions__item-right" id="addProduct">Add Product</button>
        </div>
    
        <div class="card-container">
            <% if (products.length > 0) { %>
                <% for (const product of products) { %>
                    <article class="card">
                        <img src="<%= product.imageSource %>" alt="<%= product.title %> Image" class="card__image">
                        <div class="card__content">
                            <h2 class="card__content__h2"><%= product.title %></h2>
                            <p class="card__content__details"><%= product.details %></p>
                            <p class="card__content__price">$<%= product.price %></p>
                            <p class="card__content__seller">Seller: <%= product.user.name %></p>
    
                            <div class="card__content__button-group">
                                <button type="button" class="card__content__button">Edit</button>
                                <button type="button" class="card__content__button">Delete</button>
                            </div>
                        </div>
                    </article>
                <% } %>
            <% } else { %>
                <h2>No Products Available.</h2>
            <% } %>
        </div>
    </div>

    <div class="modal" id="addProductModal">
        <article class="card modal-card">
            <div class="card__content">
                <h2 class="card__content__h2">Add Card</h2>
                <form action="/seller/products" method="POST" enctype="multipart/form-data">
                    <div class="modal__input-group">
                        <label for="title">Product Title</label>
                        <input type="text" name="title" id="title" class="modal__input">
                    </div>

                    <div class="modal__input-group">
                        <label for="details">Product Details</label>
                        <input type="text" name="details" id="details" class="modal__input">
                    </div>

                    <div class="modal__input-group">
                        <label for="price">Product Price</label>
                        <input type="number" step="0.01" name="price" id="price" class="modal__input">
                    </div>

                    <div class="card__content__button-group">
                        <button type="submit" class="card__content__button">Save</button>
                        <button type="button" class="card__content__button" id="addProductModalClose">Cancel</button>
                    </div>
                </form>
            </div>
        </article>
    </div>

<%- include("../templates/end") %>
