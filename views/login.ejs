<%- include("./templates/start") %>

<div class="centered-container">
	<form action="/login" method="POST" class="auth-form">
		<h2>Login</h2>

		<% if(error) { %>
		<p class="auth-form-error"><%= error %></p>
		<% } %> <% if(success) { %>
		<p class="auth-form-success"><%= success %></p>
		<% } %>

		<div class="auth-form__input-group">
			<label for="email">Email</label>
			<input type="text" name="email" id="email" class="auth-form__input" value="<%= input.email %>" />
		</div>

		<div class="auth-form__input-group">
			<label for="password">Password</label>
			<input type="password" name="password" id="password" class="auth-form__input" value="<%= input.password %>" />
		</div>

		<button type="submit" class="auth-form__button">Sign In</button>
	</form>
</div>

<%- include("./templates/end") %>
