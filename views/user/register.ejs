<%- include("templates/start") %>

    <div class="auth-form-container">
        <form action="/register" method="POST" class="auth-form">
            <h2>Register</h2>

            <% if(error) { %>
                <p class="auth-form-error"><%= error %></p>
            <% } %>
            
            <% if(success) { %>
                <p class="auth-form-success"><%= success %></p>
            <% } %>

            <div class="auth-form__input-group">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" class="auth-form__input">
            </div>

            <div class="auth-form__input-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="auth-form__input">
            </div>

            <div class="auth-form__input-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="auth-form__input">
            </div>

            <button type="submit" class="auth-form__button">Sign Up</button>
        </form>
    </div>

<%- include("templates/end") %>
